# H700 Gaming Device Support Configuration Fragment
# Add this to enable features specific to Allwinner H700 gaming handhelds

# Enhanced gaming input support
CONFIG_INPUT_JOYDEV=y
CONFIG_INPUT_EVDEV=y
CONFIG_INPUT_FF_MEMLESS=y

# Mali GPU support (built-in for better performance)
CONFIG_DRM_PANFROST=y

# PWM and backlight support
CONFIG_PWM_SUN4I=y
CONFIG_BACKLIGHT_PWM=y
CONFIG_BACKLIGHT_CLASS_DEVICE=y

# SPI display panel support
CONFIG_DRM_PANEL_MIPI_DPI=y
CONFIG_SPI=y
CONFIG_SPI_SUN6I=y

# Audio support for gaming
CONFIG_SND_SOC=y
CONFIG_SND_SOC_SUNXI=y
CONFIG_SND_SUN4I_CODEC=y

# Power management
CONFIG_REGULATOR=y
CONFIG_REGULATOR_FIXED_VOLTAGE=y
CONFIG_REGULATOR_AXP20X=y

# USB support
CONFIG_USB=y
CONFIG_USB_OTG=y
CONFIG_USB_DWC3=y
CONFIG_USB_DWC3_DUAL_ROLE=y

# MMC/SD support
CONFIG_MMC=y
CONFIG_MMC_SUNXI=y

# GPIO and LED support
CONFIG_GPIOLIB=y
CONFIG_GPIO_SYSFS=y
CONFIG_LEDS_CLASS=y
CONFIG_LEDS_GPIO=y

# Thermal management
CONFIG_THERMAL=y
CONFIG_CPU_THERMAL=y
CONFIG_THERMAL_OF=y
